{
  "name": "jslib",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "sideEffects": false,
  "scripts": {
    "prepare": "simple-git-hooks",
    "pre-push": "run-p lint fmt-check && pnpm build && ./scripts/verify-no-git-changes.sh",
    "cs": "changeset",
    "cs-version": "changeset version",
    "cs-publish-packages": "run-p lint fmt-check && turbo run test && changeset publish && git tag | xargs -n 1 -I% git tag -d %",
    "build": "turbo run build",
    "test": "turbo run test",
    "clean": "turbo run clean && premove .turbo",
    "lint": "run-s lint:*",
    "lint:eslint": "eslint .",
    "lint:stylelint": "stylelint \"**/*.css\"",
    "lint-fix": "run-s lint-fix:*",
    "lint-fix:eslint": "eslint . --fix",
    "lint-fix:stylelint": "stylelint \"**/*.css\" --fix",
    "fmt": "prettier \"**/*.{js,mjs,cjs,ts,jsx,tsx,css,json}\" --write",
    "fmt-check": "prettier \"**/*.{js,mjs,cjs,ts,jsx,tsx,css,json}\" --check"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.5",
    "@gpahal/eslint-config": "workspace:*",
    "@gpahal/prettier-config": "workspace:*",
    "@gpahal/stylelint-config": "workspace:*",
    "@gpahal/tsconfig": "workspace:*",
    "@ianvs/prettier-plugin-sort-imports": "^4.5.1",
    "@types/node": "^24.1.0",
    "@vitest/ui": "^3.2.4",
    "eslint": "^9.32.0",
    "npm-run-all2": "^8.0.4",
    "premove": "^4.0.0",
    "prettier": "^3.6.2",
    "simple-git-hooks": "^2.13.1",
    "stylelint": "^16.23.0",
    "tsc-alias": "^1.8.16",
    "tsc-files": "^1.1.4",
    "tsup": "^8.5.0",
    "turbo": "^2.5.5",
    "typescript": "^5.9.2",
    "vite": "^7.0.6",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4"
  },
  "packageManager": "pnpm@10.13.1",
  "engines": {
    "node": ">=20.0.0"
  }
}
