{
  "name": "jslib",
  "private": true,
  "scripts": {
    "prepare": "simple-git-hooks",
    "pre-push": "run-p lint fmt-check && pnpm build && ./scripts/verify-no-git-changes.sh",
    "cs": "changeset",
    "publish-packages": "turbo run build test && changeset version && changeset publish",
    "build": "turbo run build",
    "test": "turbo run test",
    "lint": "run-s \"lint:*\"",
    "lint:eslint": "eslint \"**/*.{js,mjs,cjs,ts,jsx,tsx}\"",
    "lint:stylelint": "stylelint \"**/*.css\"",
    "lint-fix": "run-s \"lint-fix:*\"",
    "lint-fix:eslint": "eslint \"**/*.{js,mjs,cjs,ts,jsx,tsx}\" --fix",
    "lint-fix:stylelint": "stylelint \"**/*.css\"",
    "fmt": "prettier \"**/*.{js,mjs,cjs,ts,jsx,tsx,css,json}\" --write",
    "fmt-check": "prettier \"**/*.{js,mjs,cjs,ts,jsx,tsx,css,json}\" --check"
  },
  "devDependencies": {
    "@changesets/cli": "^2.26.2",
    "@gpahal/eslint-config": "workspace:*",
    "@gpahal/prettier-config": "workspace:*",
    "@gpahal/stylelint-config": "workspace:*",
    "@gpahal/tsconfig": "workspace:*",
    "@ianvs/prettier-plugin-sort-imports": "^4.1.0",
    "@types/node": "^20.4.2",
    "@typescript-eslint/eslint-plugin": "^6.1.0",
    "@typescript-eslint/parser": "^6.1.0",
    "@vitest/ui": "^0.33.0",
    "eslint": "^8.45.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.0.0",
    "simple-git-hooks": "^2.8.1",
    "stylelint": "^15.10.2",
    "tailwind": "^4.0.0",
    "tsc-files": "^1.1.4",
    "tsup": "^7.1.0",
    "turbo": "^1.10.9",
    "typescript": "^5.1.6",
    "vite": "^4.4.6",
    "vite-tsconfig-paths": "^4.2.0",
    "vitest": "^0.33.0"
  }
}
